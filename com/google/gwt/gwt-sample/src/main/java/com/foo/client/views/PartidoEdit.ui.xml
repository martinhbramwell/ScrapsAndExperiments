<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			background-color: ivory;
		}
	</ui:style>


	<g:VerticalPanel styleName="{style.panel}">
		<g:HTMLPanel>
			<div>
				<span ui:field='mensajes' />				
			</div>
		</g:HTMLPanel>
		<g:HorizontalPanel>
			<g:InlineLabel text="Nombre" />
			<g:TextBox ui:field="nombreInput" />
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:InlineLabel text="Provincia" />
			<g:ListBox ui:field="provincias"/>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
			<g:Button text="Guardar" ui:field="guardarButton"></g:Button>
			<g:Button text="Cancelar"  ui:field="cancelarButton"></g:Button>
		</g:HorizontalPanel>

	</g:VerticalPanel>


</ui:UiBinder>
